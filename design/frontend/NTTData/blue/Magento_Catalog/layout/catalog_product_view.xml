<?xml version="1.0" encoding="UTF-8"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <head>
        <script src='js/alert-from-layout.js'/>
    </head>

    <body>

        <!-- muevo algunas cosas de lugar -->
        <move element="product.info.stock.sku" destination="page.main.title"
              after="product.price.final"/>

        <move element="product-add-form" destination="product.info.price"
              after="product.price.final"/>

        <move element="page.main.title" destination="product.info.main" after="product.price.final"/>

        <!-- sticky y carousel del ejercicio 7.2 -->
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="sticky"
                   template="Magento_Catalog::product/view/sticky.phtml"/>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="carousel"
                   template="Magento_Catalog::product/view/carousel.phtml"/>
        </referenceContainer>

        <!-- los 3 archivos del ejercicio 7.3 -->
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="accordion"
                   template="Magento_Catalog::product/view/accordion.phtml"/>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="modal"
                   template="Magento_Catalog::product/view/modal.phtml"/>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="multiselect"
                   template="Magento_Catalog::product/view/multiselect.phtml"/>
        </referenceContainer>

    </body>

</page>
